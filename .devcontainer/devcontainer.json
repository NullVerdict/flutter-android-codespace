{
  "name": "Flutter Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.profiles.linux": {
      "Root Shell": {
        "path": "sudo",
        "args": ["su"]
      }
    },
    "terminal.integrated.defaultProfile.linux": "Root Shell"
  },
  "extensions": [
    "Dart-Code.flutter",
    "redhat.java",
    "vscjava.vscode-java-pack",
    "esbenp.prettier-vscode"
  ],
  "postCreateCommand": "flutter doctor && gradle -v && sdkmanager --list",
  "remoteUser": "codespace"
}
